
    <% include ./head%>
   <script>
  function onAddClerk(){
    return true;
  }
  var arr=['','服务员','后厨'];
  function roleChange(thisa){
    clerkForm.nicheng.value=arr[thisa.value];
  }
</script>
  </head>
  <body>
        <div class="row" id="row">
          <div class="col-sm-3"></div>
          <div class="col-sm-6 headStyle">
               <form class="form-horizontal" name='clerkForm' method='post' action='./addClerk' onsubmit='return onAddClerk()'>
          <div class="form-group">
              <label class="col-sm-2 control-label">店员类别：</label>
              <div class="col-sm-10">
                  <select class="form-control" name='role' onchange='roleChange(this)'>
                <option value='0'>请选择店员类别</option>
                <option value='1'>服务员</option>
                <option value='2'>后厨</option>
              </select>
              </div>
            </div>
          <div class="form-group">
            <label for="firstname" class="col-sm-2 control-label">账号</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="firstname" placeholder="请输入账号" name='email'>
            </div>
          </div>
          <div class="form-group">
            <label for="lastname" class="col-sm-2 control-label">密码</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="lastname" placeholder="请输入密码" name='pwd'>
            </div>
          </div>
          <div class="form-group">
            <label for="lastname" class="col-sm-2 control-label">店员身份</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="lastname" placeholder="服务员" name='nicheng'>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">登录</button>
            </div>
          </div>
        </form>

                
            </div>
        <div class="col-sm-3"></div>
        </div>
</body>
</html>
